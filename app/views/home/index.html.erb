<style type="text/css">
	.post-content {
    /*background: none repeat scroll 0 0 #FFFFFF;*/
    /*opacity: 0.5;*/
    margin: -64px 20px 12px;
    position: relative;
    font-size: 25px;
    color:white;
    text-align: center;
	}
	.judge{
    text-decoration: none !important;
    cursor: pointer;
	}
