<style type="text/css">
	.box{
		margin: 15px;
	}
</style>
<body ng-controller='home'>
	<div id="features-wrapper">
		<div class="container">
			<div class="row">
				<div class="4u" ng-if='enrolls.length==0'>
					<!-- Box -->
					<a href="/get_enroll" style="text-decoration: none;">
					<section class="box feature">
						<div class="image featured">
							<img class="image_block" src="http://cw1.tw/CW/images/article/C1397790720421.jpg" onerror='this.src=""'>
						</div>
						<div class="inner">
							<header>
								<h2>YOU ARE THE NEXT</h2>
								<p>
									Get Enrolled now
								</p>
							</header>
						</div>
					</section>
					</a>
				</div>
				<div class="4u" ng-repeat='enroll in enrolls' ng-click='open(enroll)'>
					<!-- Box -->
					<section class="box feature"  >
						<a class="image featured">
							<img class="image_block" ng-src="{{enroll.image}}" onerror='this.src=""'>
						</a>
						<div class="inner">
							<header>
								<h2 ng-bind='enroll.name'></h2>
								<p>
									<small ng-bind='enroll.school'></small>
									<small ng-bind='enroll.major'></small>
									<small ng-bind='enroll.year'></small>
									<small ng-bind='enroll.topic'></small>
								</p>
							</header>
							<p class="trim-info"  ng-bind='enroll.videoInfo'></p>
						</div>
					</section>
				</div>
			</div>
		</div>
	</div>
</body>