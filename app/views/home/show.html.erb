<style type="text/css">
	.box{
		margin: 15px;
	}
    .ovh {
      overflow:hidden;
    }
</style>
<body ng-controller='home'>
	<script type="text/ng-template" id="myModalContent.html">
		<div class='model-html'>
			<div class="row">
				<div>
					<span ng-bind='items.videoInfo'></span>
				</div>
				<img class="img-responsive" ng-src='{{items.image}}/convert?w=70&h=70'>
				<h3 class="modal-title" ng-bind='items.name' ></h3>
			</div>
			<div class='modal-header'>
				<span ng-bind='items.school'></span>
				<span ng-bind='items.major'></span>
				<span ng-bind='items.year'></span>
				<span ng-bind='items.topic'></span>
			</div>
			<div class="modal-body">
				<div class="embed-responsive embed-responsive-16by9">
					<div id='youtubeCode'></div>
				</div>
			</div>
		</div>
	</script>
	<div id="features-wrapper">
		<div class="container">
			<div class="row">
				<div class="4u" ng-repeat='enroll in enrolls' ng-click='open(enroll)'>
					<!-- Box -->
					<section class="box feature"  >
						<a class="image featured">
							<img class="image_block" ng-src="{{enroll.image}}" onerror='this.src=""'>
						</a>
						<div class="inner">
							<header>
								<h2 ng-bind='enroll.name'></h2>
								<p>
									<small ng-bind='enroll.school'></small>
									<small ng-bind='enroll.major'></small>
									<small ng-bind='enroll.year'></small>
									<small ng-bind='enroll.topic'></small>
								</p>
							</header>
							<p ng-bind='enroll.videoInfo'></p>
						</div>
					</section>
				</div>
			</div>
		</div>
	</div>
</body>